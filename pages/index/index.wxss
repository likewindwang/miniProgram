.container {
    /* width: 100%; */
    height: 100%;
    padding: 0 10px;
    display: flex;
    flex-direction: column;
}
.sw-box {
    flex-shrink: 0;
    width: 100%;
    height: 150px;
    margin-bottom: 15px;
}
.sw-box .slide-image {
    width: 100%;
    height: 100%;
}
.box {
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}
.movie-box {
    height: 120px;
    margin-bottom: 10px;
    display: flex;
    flex-direction: row;
    flex-shrink: 0;
    overflow: hidden;
    background-color: rgba(204, 204, 204, .2);
}
.movie-img {
    width: 100px;
    background-color: red;
    flex-shrink: 0;
}
.list-img {
    width: 100%;
    height: 100%;
}
.movie-detail {
    flex-grow: 1;
    margin-left: 5px;
    padding: 3px 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-shrink: 0;
}
.movie-text {
    height: 16px;
    line-height: 5px;
    font-size: 16px;
    color: #000;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    flex-shrink: 0;
}
.content-text {
    font-size: 14px;
    color: #999;
    flex-shrink: 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.content-title {
    text-align: center;
    margin-bottom: 10px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.section {
    height: 30px;
    line-height: 30px;
    margin-bottom: 5px;
    flex-shrink: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}
picker{
    width: 60px;
    font-size: 16px;
    padding-left: 10px;
    flex-shrink: 0;
}
.picker {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.search-box {
    height: 100%;
    flex-grow: 1;
    font-size: 14px;
}
.search-box input {
    height: 100%;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
    box-sizing: border-box;
}
.search-btn {
    height: 30px;
    line-height: 30px;
    box-sizing: border-box;
    flex-shrink: 0;
    border: none;
    color:#FFFFFF;
    background-color:#1AAD19;
}
.paging {
    flex-shrink: 0;
    height: 30px;
    line-height: 30px;
    margin: 5px 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.moreBtn {
    height: 100%;
    line-height: 30px;
    box-sizing: border-box;
}